{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Fastify-based frontend service",
  "main": "src/index.ts",
  "scripts": {
  "dev": "ts-node-dev --respawn src/index.ts",
  "build": "tsc -p tsconfig.json",
  "build-client": "npx tsc -p tsconfig.client.json",
  "build-all": "npm run build && npm run build-client",
  "start": "node dist/index.js"
},
  "dependencies": {
    "fastify": "^4.22.2",
    "@fastify/static": "^6.12.0",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "ts-node-dev": "^2.0.0"
  }
}
